# Modified GNU Global Configuration
#
# Used default configuration, `/usr/share/gtags/gtags.conf`, shipped
# with GNU Global as a template

default:\
	:tc=native:tc=exuberant-ctags:tc=htags:
native:\
	:tc=gtags:

common:\
	:skip=HTML/,\
	HTML.pub/,\
	tags,\
	TAGS,\
	ID,\
	y.tab.c,\
	y.tab.h,\
	gtags.files,\
	cscope.files,\
	cscope.out,\
	cscope.po.out,\
	cscope.in.out,\
	SCCS/,\
	RCS/,\
	CVS/,\
	CVSROOT/,\
	{arch}/,\
	autom4te.cache/,\
	*.orig,\
	*.rej,\
	*.bak,\
	*~,\
	#*#,\
	*.swp,\
	*.tmp,\
	*_flymake.*,\
	*_flymake,\
	.git/,\
	target/:

gtags:\
	:tc=common:\
	:tc=builtin-parser:

builtin-parser:
	:langmap=c\:.c.h,\
	yacc\:.y,\
	asm\:.s.S,\
	java\:.java,\
	cpp\:.c++.cc.hh.cpp.cxx.hxx.hpp.C.H,\
	php\:.php.php3.phtml:

exuberant-ctags|etags-plugin|Setting to use Universial Ctags plug-in parser:\
	:tc=common:\
	:langmap=Ada\:.adb.ads:\
	:langmap=Asciidoc\:.txt:\
	:langmap=Asm\:.asm.ASM.s.S:\
	:langmap=Awk\:.awk.gawk.mawk:\
	:langmap=C\:.c:\
	:langmap=C++\:.c++.cc.cp.cpp.cxx.h.h++.hh.hp.hpp.hxx.C.H:\
	:langmap=Erlang\:.erl.ERL.hrl.HRL:\
	:langmap=Flex\:.as.mxml:\
	:langmap=Fortran\:.f.for.ftn.f77.f90.f95.F.FOR.FTN.F77.F90.F95:\
	:langmap=Go\:.go:\
