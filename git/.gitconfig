[user]
	name = kballou
	email = kballou@devnulllabs.io
[core]
	editor = vim
[merge]
	tool = gvimdiff
	conflictstyle = diff3
[color]
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[push]
	default = simple
[alias]
	serve = !git daemon --reuseaddr \
                      --port=8000 \
                      --verbose \
                      --base-path=. \
                      --export-all ./.git
	up = !git remote update -p
[grep]
	extendRegexp = true
	lineNumber = true
[init]
	templatedir = ~/.git_template
[pull]
	ff = only
