[core]
	editor = vim
[merge]
	tool = gvimdiff
[color]
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[push]
	default = simple
[alias]
	serve = !git daemon --reuseaddr \
                      --port=8000 \
                      --verbose \
                      --base-path=. \
                      --export-all ./.git
	up = !git remote update -p && git merge --ff-only @{u}
[grep]
	extendRegexp = true
	lineNumber = true
[init]
	templatedir = ~/.git_template
