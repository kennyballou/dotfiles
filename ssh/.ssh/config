# vim: filetype=sshconfig:
Host hg.bitbucket.org
    User hg
    Hostname bitbucket.org
    IdentityFile ~/.ssh/git_rsa

Host bitbucket.org
    User git
    HostName bitbucket.org
    IdentityFile ~/.ssh/git_rsa

Host github.com
    User git
    HostName github.com
    IdentityFile ~/.ssh/git_rsa

Host *
    PreferredAuthentications publickey
    VisualHostKey yes
    Compression yes
    IdentitiesOnly yes
