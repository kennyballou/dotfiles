# vim: filetype=sshconfig:
Host onyx
    HostName onyx.boisestate.edu
    User kballou
    ForwardX11 yes
    ForwardX11Trusted yes

Host hg.bitbucket.org
    User hg
    Hostname bitbucket.org
    IdentityFile ~/.ssh/git_rsa

Host bitbucket.org
    User git
    HostName bitbucket.org
    IdentityFile ~/.ssh/git_rsa

Host github.com
    User git
    HostName github.com
    IdentityFile ~/.ssh/git_rsa

Host viz
    User kballou
    HostName viz.boisestate.edu
    Port 22
    ProxyCommand ssh -qY onyx nc %h %p
    ForwardAgent yes

Host *
    PreferredAuthentications publickey
    VisualHostKey yes
    Compression yes
    IdentitiesOnly yes
