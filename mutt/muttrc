source "~/.mutt/crypto"
macro index <f2> '<sync-mailbox><enter-command>source \
~/.mutt/kennethmgballou.mutt<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source \
~/.mutt/kballou_uboisestate.mutt<enter><change-folder>!<enter>'
macro index <f4> '<sync-mailbox><enter-command>source \
~/.mutt/kballou_boisestate.mutt<enter><change-folder>!<enter>'

set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates

bind editor <space> noop

ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc

ignore *
unignore from: date subject to cc
unignore x-mailing-list: posted-to:
unignore x-mailer:

set markers = no
set pager_index_lines=5
set sort = 'threads'
set sort_aux = 'last-date-received'

fcc-hook .* /dev/null

folder-hook 'kennethmgballou' 'source ~/.mutt/kennethmgballou.mutt'
folder-hook 'kballou_uboisestate' 'source ~/.mutt/kballou_uboisestate.mutt'
folder-hook 'kballou_boisestate' 'source ~/.mutt/kballou_boisestate.mutt'
source ~/.mutt/kennethmgballou.mutt

set editor = 'vim + -c "set textwidth=72" -c "set wrap" -c "set nocp" -c "?^$"'
