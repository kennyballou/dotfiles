[general]
ui = quiet
accounts = devnulllabs,homecu
fsync = False

[Account devnulllabs]
localrepository = devnull-local
remoterepository = devnull-remote
status_backend = sqlite
postsynchook = notmuch new

[Account homecu]
localrepository = homecu-local
remoterepository = homecu-remote
status_backend = sqlite
postsynchook = notmuch new

[Repository devnull-local]
type = Maildir
localfolders = ~/.mail/kballou-devnulllabs.io
nametrans = lambda folder: {'drafts':  'Drafts',
                            'sent':    'Sent',
                            'spam':    'Spam',
                            'trash':   'Trash',
                            'archive': 'Archives',
                           }.get(folder, folder)


[Repository devnull-remote]
maxconnections = 1
type = IMAP
ssl = yes
remotehost = mail.runbox.com
remoteport = 993
remoteuser = kballou%%devnulllabs.io
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
nametrans = lambda folder: {'Drafts':     'drafts',
                            'Sent':       'sent',
                            'Spam':       'spam',
                            'Trash':      'trash',
                            'Archives':   'archive',
                           }.get(folder, folder)
folderfilter = lambda folder: folder not in ['trash',
                                             'spam',
                                            ]

[Repository homecu-local]
type = Maildir
localfolders = ~/.mail/kenny-homecu.com
nametrans = lambda folder: {'drafts':    '[Gmail]/Drafts',
                            'sent':      '[Gmail]/Sent Mail',
                            'spam':      '[Gmail]/Spam',
                            'trash':     '[Gmail]/Trash',
                            'important': '[Gmail]/Important',
                            'starred':   '[Gmail]/Starred',
                            'archive':   '[Gmail]/All Mail',
                           }.get(folder, folder)

[Repository homecu-remote]
maxconnections = 1
type = IMAP
ssl = yes
remotehost = imap.gmail.com
remoteport = 993
remoteuser = kenny@homecu.com
realdelete = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
nametrans = lambda folder: {'[Gmail]/Drafts':     'drafts',
                            '[Gmail]/Sent Mail':  'sent',
                            '[Gmail]/Spam':       'spam',
                            '[Gmail]/Trash':      'trash',
                            '[Gmail]/Important':  'important',
                            '[Gmail]/Starred':    'starred',
                            '[Gmail]/All Mail':   'archive',
                           }.get(folder, folder)
folderfilter = lambda folder: folder not in ['trash', 'spam',]
auth_mechanisms = GSSAPI, CRAM-MD5, PLAIN, LOGIN
