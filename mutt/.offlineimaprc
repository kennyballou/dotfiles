[general]
ui = quiet
accounts = devnulllabs
fsync = False

[Account devnulllabs]
localrepository = devnull-local
remoterepository = devnull-remote
status_backend = sqlite
postsynchook = notmuch new

[Repository devnull-local]
type = Maildir
localfolders = ~/.mail/kballou-devnulllabs.io
nametrans = lambda folder: {'drafts':  'Drafts',
                            'sent':    'Sent',
                            'spam':    'Spam',
                            'trash':   'Trash',
                            'archive': 'Archives',
                           }.get(folder, folder)


[Repository devnull-remote]
maxconnections = 1
type = IMAP
ssl = yes
remotehost = mail.runbox.com
remoteport = 993
remoteuser = kballou%%devnulllabs.io
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
nametrans = lambda folder: {'Drafts':     'drafts',
                            'Sent':       'sent',
                            'Spam':       'spam',
                            'Trash':      'trash',
                            'Archives':   'archive',
                           }.get(folder, folder)
folderfilter = lambda folder: folder not in ['trash',
                                             'spam',
                                            ]
